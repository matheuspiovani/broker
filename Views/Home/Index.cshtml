<form asp-action="SendMail">
    <div class="form-group">
        <label for="To" class="control-label">Email Destino</label>
        <input name="To" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Message" class="control-label">Mensagem</label>
        <input name="Message" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Message" class="btn btn-primary" />
    </div>
</form>
